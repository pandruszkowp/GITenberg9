<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WheelView">
        <attr name="wheel_default_item_position" format="integer" />
        <attr name="wheel_item_text_size" format="dimension" />
        <attr name="wheel_item_text_color" format="color" />
        <attr name="wheel_item_text_color_selected" format="color" />
        <attr name="wheel_same_width" format="boolean" />
        <attr name="wheel_maximum_width_text" format="string" />
        <attr name="wheel_maximum_width_text_position" format="integer" />
        <attr name="wheel_visible_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_cyclic" format="boolean" />
        <attr name="wheel_indicator" format="boolean" />
        <attr name="wheel_indicator_color" format="color" />
        <attr name="wheel_indicator_size" format="dimension" />
        <attr name="wheel_curtain" format="boolean" />
        <attr name="wheel_curtain_color" format="color" />
        <attr name="wheel_atmospheric" format="boolean" />
        <attr name="wheel_curved" format="boolean" />
        <attr name="wheel_item_align" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="DateTimeWheelLayout">
        <attr name="datetime_wheel_textColor" format="color" />
        <attr name="datetime_wheel_textColorSelected" format="color" />
        <attr name="datetime_wheel_textSize" format="dimension" />
        <attr name="datetime_wheel_curved" format="boolean" />
        <attr name="datetime_wheel_cyclic" format="boolean" />
        <attr name="datetime_wheel_indicator" format="boolean" />
        <attr name="datetime_wheel_visibleItemCount" format="integer" />
        <attr name="datetime_wheel_selectorColor" format="integer" />
        <attr name="datetime_wheel_selectorHeight" format="dimension" />
        <attr name="datetime_wheel_displayYears" format="boolean" />
        <attr name="datetime_wheel_displayMonths" format="boolean" />
        <attr name="datetime_wheel_displayDays" format="boolean" />
        <attr name="datetime_wheel_displayHours" format="boolean" />
        <attr name="datetime_wheel_displayMinutes" format="boolean" />
        <attr name="datetime_wheel_displaySeconds" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LinkageWheelLayout">
        <attr name="address_wheel_textColor" format="color" />
        <attr name="address_wheel_textColorSelected" format="color" />
        <attr name="address_wheel_textSize" format="dimension" />
        <attr name="address_wheel_curved" format="boolean" />
        <attr name="address_wheel_cyclic" format="boolean" />
        <attr name="address_wheel_indicator" format="boolean" />
        <attr name="address_wheel_visibleItemCount" format="integer" />
        <attr name="address_wheel_selectorColor" format="integer" />
        <attr name="address_wheel_selectorHeight" format="dimension" />
    </declare-styleable>

</resources>