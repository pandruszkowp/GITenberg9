<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WheelView">
        <attr name="wheel_default_item_position" format="integer" />
        <attr name="wheel_item_text_size" format="dimension" />
        <attr name="wheel_item_text_color" format="color" />
        <attr name="wheel_item_text_color_selected" format="color" />
        <attr name="wheel_same_width" format="boolean" />
        <attr name="wheel_maximum_width_text" format="string" />
        <attr name="wheel_maximum_width_text_position" format="integer" />
        <attr name="wheel_visible_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_cyclic" format="boolean" />
        <attr name="wheel_indicator" format="boolean" />
        <attr name="wheel_indicator_color" format="color" />
        <attr name="wheel_indicator_size" format="dimension" />
        <attr name="wheel_curtain" format="boolean" />
        <attr name="wheel_curtain_color" format="color" />
        <attr name="wheel_atmospheric" format="boolean" />
        <attr name="wheel_curved" format="boolean" />
        <attr name="wheel_item_align" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DateTimeWheelView">
        <attr name="wheel_dt_textColor" format="color" />
        <attr name="wheel_dt_textColorSelected" format="color" />
        <attr name="wheel_dt_textSize" format="dimension" />
        <attr name="wheel_dt_curved" format="boolean" />
        <attr name="wheel_dt_cyclic" format="boolean" />
        <attr name="wheel_dt_visibleItemCount" format="integer" />
        <attr name="wheel_dt_selectorColor" format="integer" />
        <attr name="wheel_dt_selectorHeight" format="dimension" />
        <attr name="wheel_dt_displayYears" format="boolean" />
        <attr name="wheel_dt_displayMonths" format="boolean" />
        <attr name="wheel_dt_displayDays" format="boolean" />
        <attr name="wheel_dt_displayHours" format="boolean" />
        <attr name="wheel_dt_displayMinutes" format="boolean" />
    </declare-styleable>

</resources>